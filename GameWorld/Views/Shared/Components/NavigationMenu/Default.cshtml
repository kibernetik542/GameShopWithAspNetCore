@model IEnumerable<string>

<style>
    #catMenu:hover {
        cursor: pointer;
    }
</style>

<a class="btn btn-block btn-default" asp-action="List" asp-controller="Product" asp-route-category="">
    <span class="glyphicon glyphicon-home text-primary">&nbsp;<b>Home</b></span>
</a>

@foreach (string category in Model)
{
    <a id="catMenu"
       class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-success":"btn-default")" asp-action="List" asp-controller="Product" asp-route-category="@category" asp-route-page="1">
        @category
    </a>
}
