@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {

        <small class="navbar-text">
            <br />
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.ComputeTotalValue().ToString("C")
        </small>
    }
    <a class="btn btn-sm btn-default navbar-btn" asp-controller="Cart" asp-action="Index" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <span class="fa fa-2x fa-shopping-cart text-primary"></span>
    </a>
</div>