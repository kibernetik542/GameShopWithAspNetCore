@model Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <input asp-for="Name" class="form-control" placeholder="Name:" />
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
    </div>
    <div class="form-group">
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control" placeholder="Description:"></textarea>
    </div>
    <div class="form-group">
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" placeholder="Category:" />
    </div>
    <div class="form-group">
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" placeholder="Price:" />
    </div>
    <div class="text-center">
        <button class="btn btn-default" type="submit">
            <i class="fa fa-floppy-o"></i>&nbsp;Save
        </button>
        <a asp-action="Index" class="btn btn-default">
            <i class="fa fa-ban text-danger"></i>&nbsp;Cancel
        </a>
    </div>
</form>
